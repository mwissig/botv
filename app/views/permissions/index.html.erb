<p id="notice"><%= notice %></p>

<h1>Permissions</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Is admin</th>
      <th>Is mod</th>
      <th>Can post video</th>
      <th>Can comment</th>
      <th>Can bulb</th>
      <th>Video ban end</th>
      <th>Comment ban end</th>
      <th>Bulb ban end</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @permissions.each do |permission| %>
      <tr>
        <td><%= permission.user_id %></td>
        <td><%= permission.is_admin %></td>
        <td><%= permission.is_mod %></td>
        <td><%= permission.can_post_video %></td>
        <td><%= permission.can_comment %></td>
        <td><%= permission.can_bulb %></td>
        <td><%= permission.video_ban_end %></td>
        <td><%= permission.comment_ban_end %></td>
        <td><%= permission.bulb_ban_end %></td>
        <td><%= link_to 'Show', permission %></td>
        <td><%= link_to 'Edit', edit_permission_path(permission) %></td>
        <td><%= link_to 'Destroy', permission, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Permission', new_permission_path %>
