<p id="notice"><%= notice %></p>
<div class="box rules">
<h1>Playlists</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Title</th>
      <th>Category</th>
      <th>Category</th>
      <th>Tags</th>
      <th>Plays</th>
            <th>Videos</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @playlists.each do |playlist| %>
      <tr>
        <td><%= link_to playlist.user.name, user_path(playlist.user) %></td>
        <td><%= link_to playlist.title, playlist_path(playlist) %></td>
        <td><%= playlist.category1 %></td>
        <td><%= playlist.category2 %></td>
        <td><%= playlist.tags %></td>
        <td><%= playlist.plays %></td>
                <td><%= playlist.items.count %></td>



      </tr>
    <% end %>
  </tbody>
</table>
</div>
