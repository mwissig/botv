
<%= simple_form_for(@playlist) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :user_id %>
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :category1 %>
    <%= f.input :category2 %>
    <%= f.input :tags %>
    <%= f.input :plays %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
