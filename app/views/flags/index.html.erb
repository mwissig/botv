<p id="notice"><%= notice %></p>

<h1>Flags</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Flaggable</th>
      <th>Flaggable type</th>
      <th>Reason</th>
      <th>Message</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @flags.each do |flag| %>
      <tr>
        <td><%= flag.user_id %></td>
        <td><%= flag.flaggable_id %></td>
        <td><%= flag.flaggable_type %></td>
        <td><%= flag.reason %></td>
        <td><%= flag.message %></td>
        <td><%= link_to 'Show', flag %></td>
        <td><%= link_to 'Edit', edit_flag_path(flag) %></td>
        <td><%= link_to 'Destroy', flag, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

