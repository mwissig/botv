                    <%= link_to "NSFW Videos", nsfw_path %><br>
                  <% end %>
              <%= render 'permissions/nsfwform', user: current_user %>
  </div>

  <div>
    <%= render 'videos/allvideos' %>
  </div>

  <div>
  </div>

</div>
